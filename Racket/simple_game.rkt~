#lang racket/gui

;Make a window
(define frame (new frame%
                   [label "Game"]
                   [width 500]
                   [height 500]))

;Draw our character
(define draw-char
  (lambda (dc x y r)
    
    ;Clear the board
    (send dc erase)

    ;Define a radius
    (let ([radius 30])
      ;Draw the char at center (x, y)
      (send dc draw-ellipse (- x ( / radius 2)) (- y ( / radius 2)) radius radius))
    ;Draw char view
    (let ([vision 60])
      (send dc draw-line
            x y
            (+ x (sin r) vision) (+ y (cos r) vision)))))

(new canvas% [parent frame]
             [paint-callback
              (lambda (canvas dc)
                (draw-char dc 100 100 0))])

(send frame show #t)